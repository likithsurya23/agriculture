generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  phone     String?
  avatar    Bytes?
  role      String?
  createdAt DateTime @default(now())
}




model SoilData {
  id           String   @id @default(uuid())
  userId       String
  nitrogen     Float
  phosphorous  Float
  potassium    Float
  ph           Float
  rainfall     Float
  state        String
  city         String
  createdAt    DateTime @default(now())


}
